                <th>
                    @Html.DisplayNameFor(model => model.PhoneID)
                </th>     
                <th>
                    @Html.DisplayNameFor(model => model.MobileID)
                </th>   
                <th>
                    @Html.DisplayNameFor(model => model.FaxID)
                </th>            
                <th>
                    @Html.DisplayNameFor(model => model.ChipcardID)
                </th>              
                <th>
                    @Html.DisplayNameFor(model => model.Timestamp)
                </th>                                                              
                <th>
                    <p>Action</p>
                </th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model)
           {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nr)
                    </td>
                   <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>  
                   <td>
                        @Html.DisplayFor(modelItem => item.TitleID)
                    </td>                                      
                    <td>
                        @Html.DisplayFor(modelItem => item.Firstname)
                    </td>
