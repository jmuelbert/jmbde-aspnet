                        @Html.DisplayFor(modelItem => item.CompanyID)
                    </td>                                               
                   <td>
                        @Html.DisplayFor(modelItem => item.PhoneID)
                    </td>                    
                   <td>
                        @Html.DisplayFor(modelItem => item.MobileID)
