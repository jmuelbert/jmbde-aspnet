@model jmbde.Models.Employee
@{
	ViewBag.Title = "Edit Employee";
}

<h2>
    Edit Employee
</h2>

<div>
    <form asp-controller="Employee" asp-action="Update" method="post" asp-route-id="@Model.Id">
        <div asp-validation-summary="ValidationSummary.ModelOnly"
            class="text-danger">
        </div>
        
        <div class="form-group">
            <label asp-for="EmployeeNO"></label>
            <input asp-for="EmployeeNO" class="form-control" placeholder="123456" />
            <span asp-asp-validation-for="EmployeeNO" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" placeholder="firstname" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-default" value="Save" />
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
