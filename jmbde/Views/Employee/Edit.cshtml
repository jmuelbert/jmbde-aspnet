@model jmbde.Models.Employee
@{
	ViewBag.Title = "Edit Employee";
}

<h2>
    Edit Employee
</h2>

<div>
    <form class="form-horizontal" role="form" asp-controller="Employee" asp-action="Update" method="post" asp-route-id="@Model.Id">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="EmployeeNO"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="EmployeeNO" placeholder="123456" />
            </div>
            <span asp-validation-for="EmployeeNO" class="text-danger"></span>
        </div>

        <div class="form-group" >
            <label class="control-label col-sm-2" asp-for="FirstName"></label>
            <div class="col-sm-4">
                <input asp-for="FirstName" class="form-control" placeholder="Firstname" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label class="contrpl-label col-sm-2" asp-for="Name"></label>
            <div class="col-sm-4">
                <input asp-for="Name" class="form-control" placeholder="Name" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <dev class="form-group">
            <label class="control-label col-sm-2" asp-for="Birthday"></label>
            <div class="col-sm4">
                <input asp-for="Birthday" class="form-control" placeholder="DD.MM.YYYY" />
            </div>
            <span asp-validation-for="Birthday" class="text-danger"></span>
        
            <label class="control-label col-sm-2" asp-for="Gender"></label>
            <div class="col-sm4">
                <input asp-for="Gender" class="form-control" placeholder="F/M" />
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </dev>

        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="StartDate"></label>
            <div class="col-sm4">
                <input asp-for="StartDate" class="form-control" placeholder="DD.MM.YYYY" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="EndDate"></label>
            <div class="col-sm4">
                <input asp-for="EndDate" class="form-control" placeholder="DD.MM.YYYY" />
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="BusinessMail"></label>
            <div class="col-sm-10">
                <input asp-for="BusinessMail" class="form-control" placeholder="mail@company.com" />
            </div>
            <span asp-validation-for="BusinessMail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="ChipCard"></label>
            <div class="col-sm-10">
                <input asp-for="ChipCard" class="form-control" placeholder="0001" />
            </div>
            <span asp-validation-for="ChipCard" class="text-danger"></span>
        </div>
                
        <div class="form-group">
            <label class="control-label col-sm-3 col-md-2" asp-for="Active"></label>
            <div class="col-sm-9 col-md-10">
                <div class="checkbox">
                    <input type="checkbox" class="check-box" name="Active" id="Active" value="true" data-val="true" />
                    <input name="Active" type="hidden" value="false" />
                </div>
            </div>

          <label class="control-label col-sm-3 col-md-2" asp-for="DataCare"></label>
            <div class="col-sm-9 col-md-10">
                <div class="checkbox">
                    <input type="checkbox" class="check-box" name="DataCare" id="DataCare" value="true" data-val="true" />
                    <input name="DataCare" type="hidden" value="false" />
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Save" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
