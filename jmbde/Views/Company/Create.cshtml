@model jmbde.Models.Company
@{
	ViewBag.Title = "Create Company Entry";
}

<h2>
    Create Company Entry
</h2>

<div>
    <form asp-controller="Company" asp-action="Create" method="post">
        <div asp-validation-summary="ValidationSummary.ModelOnly"
            class="text-danger">
        </div>
        
        <div class="form-inline">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name2"></label>
                <input asp-for="Name2" class="form-control" placeholder="Name2" />
                <span asp-validation-for="Name2" class="text-danger"></span>
            </div>
        </div>
                   
        <input type="submit" class="btn btn-default" value="Create" />
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
