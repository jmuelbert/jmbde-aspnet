@model IEnumerable<jmbde.Models.Phone>
@{
	ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div>
    <h4>Phone</h4>
    <hr />
	<a asp-action="Create">Create a New Phone</a>

    <div class="row">
        <div class="col-md-4">

            <table id="phone" class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Number)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Number)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.PhoneId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.PhoneId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.PhoneId">Delete</a>
                            </td> 
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
