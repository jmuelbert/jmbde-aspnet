@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model IEnumerable<jmbde.Models.Chipcard>

@{
	ViewBag.Title = @Localizer["Chipcard"];
}

<h2>
    @Localizer["Chipcard"]
</h2>

<p>
	<a role="button" asp-action="Create">Create a New Chipcard</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th>
                <p>Action</p>
            </th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>
                <td>
                    <a role="button" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a role="button" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a role="button" asp-action="Delete" asp-route-id="@item.ID">Delete</a> 
                </td>
            </tr>
        }        
    </tbody>
</table>