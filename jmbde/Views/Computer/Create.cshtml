@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model jmbde.Data.Computer

@{
	ViewBag.Title =  @Localizer["Create Computer Entry"];
}

<h2>
    @Localizer["Create Computer Entry"]
</h2>

<div>
    <form asp-controller="Computer" asp-action="Create" method="post">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-inline">
            <div class="form-group">
                <label asp-for="NetworkName"></label>
                <input asp-for="NetworkName" class="form-control" placeholder="NetworkName" />
                <span asp-validation-for="NetworkName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <select asp-for="EmployeeID" asp-items="@ViewBag.Items"></select>
        </div>
                   
        <input type="submit" class="btn btn-default" value=@Localizer["Create"] />
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
