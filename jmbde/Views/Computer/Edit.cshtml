@model jmbde.Models.Computer
@{
	ViewBag.Title = "Edit Computer";
}

<h2>
    Edit Computer
</h2>

<div>
    <form asp-controller="Computer" asp-action="Update" method="post" asp-route-id="@Model.Id">
        <div asp-validation-summary="ValidationSummary.ModelOnly"
            class="text-danger">
        </div>
       
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="pcnumber" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <select asp-for="EmployeeId" asp-items="@ViewBag.Items"></select>
        </div>      
          
        <input type="submit" class="btn btn-default" value="Save" />
    </form>
</div>
      

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
