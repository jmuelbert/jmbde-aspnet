@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model jmbde.Data.Computer
@{
	ViewBag.Title = @Localizer["Edit Computer"];
}

<h2>
    @Localizer["Edit Computer"]
</h2>

<div>
    <form asp-controller="Computer" asp-action="Update" method="post" asp-route-id="@Model.ComputerId">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
        <div class="form-group">
            <label asp-for="NetworkName"></label>
            <input asp-for="NetworkName" class="form-control" placeholder="pcnumber" />
            <span asp-validation-for="NetworkName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Active"></label>
            <input asp-for="Active" class="form-control" />
            <span asp-validation-for="Active" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <select asp-for="EmployeeID" asp-items="@ViewBag.Items"></select>
        </div>      
          
        <input type="submit" class="btn btn-default" value=@Localizer["Save"] />
    </form>
</div>
      

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
