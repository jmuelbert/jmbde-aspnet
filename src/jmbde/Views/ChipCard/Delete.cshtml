@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model jmbde.Data.Chipcard
@{
	ViewBag.Title = @Localizer["Delete Chipcard"];
}

<h2>
    @Localizer["Delete Chipcard"]
</h2>

<h3>
    @Localizer[”Are you sure want to delete this ?"]
</h3>

@if (ViewBag.Retry)
{
    <p class="alert-danger">@Localizer["Error deleting. Retry ?"]</p>
}

<div>
    <dl>
        @Html.DisplayNameFor(model => model.NetworkName)
    </dl>
    <dd>
        @Html.DisplayFor(model => model.NetworkName)
    </dd>

    <div>
        <form asp-controller="Chipcard" asp-action="Delete" method="POST">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value=@Localizer[”Delete"] />
            </div>
        </form>
        <p><a asp-controller="Chipcard" asp-action="Index">@Localizer["Back to List"]</a></p>
    </div>
</div>