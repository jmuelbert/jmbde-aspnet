@model jmbde.Models.Employee
@{
	ViewBag.Title = "Create Employee Entry";
}

<h2>
   Create Employee
</h2>

<div>
    <form asp-controller="Employee" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group row">
            <label for="EmployeeNO" class="col-xs-2 col-form-label" asp-for="EmployeeNO"></label>
            <div class="col-xs-10">
                <input class="form-control" type="text" id="EmployeeNO" asp-for="EmployeeNO"  placeholder="123456" />
                <span asp-validation-for="EmployeeNO" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="FirstName" class="col-xs-2 col-for-label" asp-for="FirstName"></label>
            <div class="col-xs-10">
                <input class="form-control" type="text" id="FirstName" asp-for="FirstName" placeholder="Firstname" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label for="Name" class="col-xs-2 col-form-label" asp-for="Name"></label>
            <div class="col-xs-10">
                <input class="form-control" type="text" id="Name" asp-for="Name" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <label for="BusinessMail" class="col-xs-2 col-form-label" asp-for="BusinessMail"></label>
            <div class="col-xs-10">
                <input class="form-control" type="email" id="BusinessMail" asp-for="BusinessMail" placeholder="mail@company.com" />
                <span asp-validation-for="BusinessMail" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label for="ChipCard" class="col-xs-2 col-form-label" asp-for="ChipCard"></label>
            <div class="col-xs-10">
                <input class="form-control" type="text" id="ChipCard" asp-for="ChipCard" placeholder="0001" />
                <span asp-validation-for="ChipCard" class="text-danger"></span>
            </div>
        </div>


        <fieldset class="form-group row">
           <legend class="col-form-legend col-sm-2">Active</legend>
           <div class="col-sm-10">
               <label class="for-check-label">
                   <input class="form-check-input" type="checkbox" name="Active" id="Active" value="Active"/>
               </label>
           </div>
        </fieldset>

 
        <fieldset class="form-group row">
            <legend class="col-form-legend col-sm-2">DataCare</legend>
            <div class="col-sm-10">
                <label class="for-check-label">
                    <input class="form-check-input" type="checkbox" name="DataCare" id="DataCare" value="DataCare"/>
                    <span asp-validation-for="DataCare" class="text-danger"></span>
                </label>
             </div>      
        </fieldset>

        <input type="submit" class="btn btn-primary" value="Create" />
        <a role="button" class="btn btn-info" asp-controller="Employee" asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}