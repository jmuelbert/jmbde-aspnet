@model jmbde.Models.Employee
@{
	ViewBag.Title = "Edit Employee";
}

<h2>
    Edit Employee
</h2>

<div>
    <form class="form-horizontal" role="form" asp-controller="Employee" asp-action="Update" method="post" asp-route-id="@Model.Id">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row ">
            <label class="control-label col-md-4" for="EmpoyeeNO" asp-for="EmployeeNO"></label>
            <div class="col-md-6">
                <input type="text" class="form-control" id="EmployeeNO" asp-for="EmployeeNO" placeholder="123456" />
            </div>
            <span asp-validation-for="EmployeeNO" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-4" for="FirstName" asp-for="FirstName"></label>
            <div class="col-md-6">
                <input type="text" class="form-control" id="FirstName" asp-for="FirstName" placeholder="First Name" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-4" for="Name" asp-for="Name"></label>
            <div class="col-md-6">
                <input type="text" class="form-control" id="Name" asp-for="Name"  placeholder="Name" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <label class="control-label col-md-4" for="BusinessMail" asp-for="BusinessMail"></label>
            <div class="col-md-6">
                <input type="email" class="form-control" id="BusinessMail" asp-for="BusinessMail"  placeholder="Email Address" />
            </div>
            <span asp-validation-for="BusinessMail" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-4" for="ChipCard" asp-for="ChipCard"></label>
            <div class="col-md-6">
                <input type="text" class="form-control" id="ChipCard" asp-for="ChipCard"  placeholder="0001" />
            </div>
            <span asp-validation-for="ChipCard" class="text-danger"></span>
        </div>
                
     <fieldset class="form-group row">
           <legend class="col-form-legend col-sm-2">Active</legend>
           <div class="col-sm-10">
               <label class="for-check-label">
                   <input class="form-check-input" type="checkbox" name="Active" id="Active" value="Active"/>
               </label>
           </div>
        </fieldset>

 
        <fieldset class="form-group row">
            <legend class="col-form-legend col-sm-2">DataCare</legend>
            <div class="col-sm-10">
                <label class="for-check-label">
                    <input class="form-check-input" type="checkbox" name="DataCare" id="DataCare" value="DataCare"/>
                    <span asp-validation-for="DataCare" class="text-danger"></span>
                </label>
             </div>      
        </fieldset>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a role="button" class="btn btn-info" asp-controller="Employee" asp-action="Index">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}