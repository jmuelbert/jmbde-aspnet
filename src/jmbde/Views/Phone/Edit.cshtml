@model jmbde.Models.Phone
@{
	ViewBag.Title = "Edit Phone";
}

<h2>
    Edit Phone
</h2>

<div>
    <form asp-controller="Phone" asp-action="Update" method="post" asp-route-id="@Model.Id">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="Number"></label>
            <input asp-for="Number" class="form-control" placeholder="firstname" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Active"></label>
            <input asp-for="Active" class="form-control" />
            <span asp-validation-for="Active" class="text-danger"></span>
        </div>
 
        <div class="form-group">
            <select asp-for="EmployeeId" asp-items="@ViewBag.Items"></select>
        </div>     
        
        <input type="submit" class="btn btn-default" value="Save" />
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
