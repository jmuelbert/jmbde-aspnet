@page "{id:int}"
@model JMuelbert.BDE.Pages.Computers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Computer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.ComputerID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.ComputerID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.SerialNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.ServiceTag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.ServiceTag)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.ServiceNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.ServiceNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.Memory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.Memory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.Network)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.Network)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.NetworkIpAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.NetworkIpAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.ShouldReplace)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.ShouldReplace)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.LastUpdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.LastUpdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.Software)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Version</th>
                </tr>
                @foreach (var item in Model.Computer.Software)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Version)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Computer.ComputerID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
