@page "{id:int}"
@model JMuelbert.BDE.Pages.Inventories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Inventory.InventoryId" />
            <div class="form-group">
                <label asp-for="Inventory.Identifier" class="control-label"></label>
                <input asp-for="Inventory.Identifier" class="form-control" />
                <span asp-validation-for="Inventory.Identifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory.Description" class="control-label"></label>
                <input asp-for="Inventory.Description" class="form-control" />
                <span asp-validation-for="Inventory.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory.Active" class="control-label"></label>
                <div class="checkbox">
                    <label>
                        <input asp-for="Inventory.Active" />
                    </label>
                </div>
                <span asp-validation-for="Inventory.Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory.LastUpdate" class="control-label"></label>
                <input asp-for="Inventory.LastUpdate" class="form-control" />
                <span asp-validation-for="Inventory.LastUpdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
