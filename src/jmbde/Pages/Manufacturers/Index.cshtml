@page
@model jmbde.Pages.Manufacturers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
                        asp-route-currentFilter="@Model.CurrentFilter"> 
                        @Html.DisplayNameFor(model => model.Manufacturer[0].Name)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer[0].Name2)
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.SupportSort"
                        asp-route-currentFilter="@Model.CurrentFilter"> 
                        @Html.DisplayNameFor(model => model.Manufacturer[0].Supporter)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer[0].Street)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer[0].Street22)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer[0].MailAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer[0].PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer[0].FaxNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer[0].HotlineNumber)
                </th>
                <th>
                   <a asp-page="./Index" asp-route-sortOrder="@Model.LastUpdateSort"
                        asp-route-currentFilter="@Model.CurrentFilter">                      
                        @Html.DisplayNameFor(model => model.Manufacturer[0].LastUpdate)
                    </a>
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Manufacturer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supporter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street22)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaxNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotlineNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ManufacturerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ManufacturerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ManufacturerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.Manufacturer.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Manufacturer.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Manufacturer.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Manufacturer.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-default @nextDisabled">
    Next
</a>